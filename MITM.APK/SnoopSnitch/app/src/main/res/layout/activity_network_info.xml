                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/network_info_cid_value"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/networkInfoCurrentRNC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/network_info_rnc_value"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/networkInfoCurrentARFCN"
                        android:layout_width="wrap_content"
